class Solution(object):
    def findPoisonedDuration(self, timeSeries, duration):
        if not timeSeries:
            return 0

        total = 0
        prev_end = 0

        for t in timeSeries:
            if t >= prev_end:
                total += duration          # No overlap
            else:
                total += t + duration - prev_end  # Overlap: only add the extra time

            prev_end = t + duration

        return total
