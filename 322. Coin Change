#include <stdio.h>
#include <stdlib.h>
#include <limits.h>

int coinChange(int* coins, int coinsSize, int amount) {
    int* dp = (int*)malloc((amount + 1) * sizeof(int));
    
    for (int i = 0; i <= amount; i++) {
        dp[i] = amount + 1;  // Initialize with an impossible large number
    }
    dp[0] = 0;  // Base case

    for (int i = 1; i <= amount; i++) {
        for (int j = 0; j < coinsSize; j++) {
            if (i - coins[j] >= 0) {
                if (dp[i - coins[j]] + 1 < dp[i]) {
                    dp[i] = dp[i - coins[j]] + 1;
                }
            }
        }
    }

    int result = (dp[amount] > amount) ? -1 : dp[amount];
    free(dp);  // Always free allocated memory
    return result;
}

int main() {
    int coins[] = {186, 419, 83, 408};
    int amount = 6249;
    int size = sizeof(coins) / sizeof(coins[0]);
    printf("Minimum coins: %d\n", coinChange(coins, size, amount));
    return 0;
}
