int minNumber(int* nums1, int nums1Size, int* nums2, int nums2Size) {
    int hash[10] = {0};
    int min1 = 10, min2 = 10;
    int smallestCommon = 10; // track smallest common

    for (int i = 0; i < nums1Size; i++) {
        hash[nums1[i]]++;
        if (nums1[i] < min1) min1 = nums1[i];
    }
    for (int i = 0; i < nums2Size; i++) {
        hash[nums2[i]]++;
        if (nums2[i] < min2) min2 = nums2[i];
        if (hash[nums2[i]] == 2 && nums2[i] < smallestCommon) {
            smallestCommon = nums2[i];
        }
    }

    if (smallestCommon != 10) {
        return smallestCommon; // smallest common digit
    }

    int num1 = min1 * 10 + min2;
    int num2 = min2 * 10 + min1;
    return num1 < num2 ? num1 : num2;
}
