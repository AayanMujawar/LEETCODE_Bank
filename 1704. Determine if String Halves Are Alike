class Solution {
    public boolean halvesAreAlike(String s) {
        int count1 = 0;
        int count2 = 0;
        int n = s.length();

        for (int i = 0; i < n / 2; i++) {
            char c = s.charAt(i);
            if (isVowel(c)) {
                count1++;
            }
        }

        for (int i = n / 2; i < n; i++) {
            char c = s.charAt(i);
            if (isVowel(c)) {
                count2++;
            }
        }

        return count1 == count2;
    }

    private boolean isVowel(char c) {
        return c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u' ||
               c == 'A' || c == 'E' || c == 'I' || c == 'O' || c == 'U';
    }
}
