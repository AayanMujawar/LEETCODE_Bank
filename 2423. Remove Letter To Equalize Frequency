#include <stdbool.h>
#include <string.h>

bool equalFrequency(char* word) {
    int freq[26] = {0};

    // Count frequency of each character
    for (int i = 0; word[i] != '\0'; i++) {
        freq[word[i] - 'a']++;
    }

    // Try removing one occurrence of each character
    for (int i = 0; i < 26; i++) {
        if (freq[i] > 0) {

            freq[i]--;  // remove one character

            int same = 0;
            bool valid = true;

            for (int j = 0; j < 26; j++) {
                if (freq[j] > 0) {
                    if (same == 0)
                        same = freq[j];
                    else if (freq[j] != same) {
                        valid = false;
                        break;
                    }
                }
            }

            freq[i]++;  // restore

            if (valid)
                return true;
        }
    }

    return false;
}
