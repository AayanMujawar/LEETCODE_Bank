#include <stdlib.h>
#include <limits.h>

int isPrime(int num) {
    if (num <= 1) return 0;
    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) {
            return 0;
        }
    }
    return 1;
}

int* closestPrimes(int left, int right, int* returnSize) {
    int* result = (int*)malloc(2 * sizeof(int));
    *returnSize = 2;
    
    int prevPrime = -1;
    int minDiff = INT_MAX;

    for (int i = left; i <= right; i++) {
        if (isPrime(i)) {
            if (prevPrime != -1) {
                int diff = i - prevPrime;
                if (diff < minDiff) {
                    minDiff = diff;
                    result[0] = prevPrime;
                    result[1] = i;
                }
            }
            prevPrime = i;
        }
    }

    if (minDiff == INT_MAX) {
        result[0] = -1;
        result[1] = -1;
    }

    return result;
}
