int findSpecialInteger(int* arr, int arrSize) {
    int count = 1;
    for (int i = 1; i < arrSize; i++) {
        if (arr[i] != arr[i - 1]) {
            if (count > arrSize / 4)
                return arr[i - 1];
            count = 1;
        } else {
            count++;
        }
    }
    if (count > arrSize / 4)
        return arr[arrSize - 1];
    return -1;
}
