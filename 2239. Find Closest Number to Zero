int findClosestNumber(int* nums, int numsSize) {
    int ans = nums[0];

    for (int i = 1; i < numsSize; i++) {
        if (abs(nums[i]) < abs(ans)) {
            ans = nums[i];
        }
        else if (abs(nums[i]) == abs(ans) && nums[i] > ans) {
            ans = nums[i];
        }
    }
    return ans;
}
