int* sortArrayByParityII(int* nums, int numsSize, int* returnSize) {
    int j = 1;

    for (int i = 0; i < numsSize; i += 2) {
        if (nums[i] % 2 == 1) {
            while (nums[j] % 2 == 1) {
                j += 2;
            }
            int temp = nums[i];
            nums[i] = nums[j];
            nums[j] = temp;
        }
    }

    *returnSize = numsSize;
    return nums;
}
