int countKDifference(int* nums, int numsSize, int k) {
    int freq[101] = {0}; 
    int count = 0;

    for (int i = 0; i < numsSize; i++) {
        int x = nums[i];
        if (x - k >= 1) count += freq[x - k];
        if (x + k <= 100) count += freq[x + k];
        freq[x]++;
    }
    return count;
}
